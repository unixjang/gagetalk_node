                            <input id="input_message" type="text" placeholder="Message ..." class="form-control"/><span class="input-group-btn">
                  <button id="btn_sendmessage" type="button" class="btn btn-default">&#xC804;&#xC1A1;</button></span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- MODAL : owner sign up-->
<div id="modal_signup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">&times;</button>
                <h4 class="modal-title">Sign Up</h4>
            </div>
            <form id="form_signup" role="form" method="post" action="/OwnerSignupTask" class="form-inline" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input name="mar_id" type="text" placeholder="아이디" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        <input name="password" type="password" placeholder="암 호" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        <input name="password_ok" type="password" placeholder="암호 확인" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-home"></span></span>
                        <input name="mar_name" type="text" placeholder="상점명" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input name="email" type="text" placeholder="이메일" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-phone-alt"></span></span>
                        <input name="tel" type="text" placeholder="전화번호" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                        <input name="phone" type="text" placeholder="휴대폰 번호" class="form-control"/>
                    </div><br/>
                    <div class="input-group">
                        &nbsp;마켓 이미지 선택 <p><input name="image" type="file" class="form-group-lg"></p>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></span>
                        <input name="address" type="text" placeholder="주소" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-tag"></span></span>
                        <input name="category" type="text" placeholder="카테고리" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-globe"></span></span>
                        <input name="homepage" type="text" placeholder="홈페이지" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-pencil"></span></span>
                        <input name="description" type="text" placeholder="설명" class="form-control"/>
                    </div><br/>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                    <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content-->
    </div>
    <!-- /.modal-dialog-->
</div>
<!-- /.modal-->
<!-- MODAL : login owner-->
<div id="modal_login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">&times;</button>
                <h4 id="modal_login_title" class="modal-title">Login</h4>
            </div>
            <form id="form_login" role="form" method="post" action="/chatapp_owner/login" class="form-inline">
                <div class="modal-body">
                    <div id="mar_id" class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input name="mar_id" type="text" placeholder="사장님 아이디" class="form-control"/>
                    </div><br/>
                    <div class="input-group"><span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        <input name="password" type="password" placeholder="암 호" class="form-control"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btn_login" type="submit" class="btn btn-primary">Login</button>
                    <button id="btn_signup" type="button" class="btn btn-info">Sign Up</button>
                    <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content-->
    </div>
    <!-- /.modal-dialog-->
</div>
<!-- /.modal-->
<!-- MODAL : logout-->
<div id="modal_logout" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close">&times;</button>
                <h4 class="modal-title">Log Out</h4>
            </div>
            <div class="modal-body">
                <Are>you sure you want to Log Out?</Are>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-default">No</button>
                <button id="btn_logout" type="button" class="btn btn-warning">Log Out</button>
            </div>
        </div>
        <!-- /.modal-content-->
    </div>
    <!-- /.modal-dialog-->
</div>
<!-- /.modal-->

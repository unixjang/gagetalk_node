                    <div class="clearfix"></div>
                </div>
                <!-- ###############  chat : CHAT LIST ###############-->
                <div class="panel-collapse collapse in">
                    <div id="chat" style="overflow-y: auto; width: auto; height: 400px;" class="portlet-body chat-widget">
